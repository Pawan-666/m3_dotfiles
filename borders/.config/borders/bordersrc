#!/bin/bash

# Window borders configuration
# Colors: Gruvbox theme with transparent inactive windows
options=(
  style=round                # Round border corners
  width=4                   # Border width in pixels
  hidpi=off                 # Disable HiDPI scaling
  active_color=0xffb8bb26   # Active window: Gruvbox yellow-green
  inactive_color=0x00000000 # Inactive window: Transparent
)

# Apply border settings
borders "${options[@]}"
