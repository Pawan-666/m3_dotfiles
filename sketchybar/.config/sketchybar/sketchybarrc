#!/bin/sh

# Sketchybar configuration - Minimal setup

# Bar appearance
bar=(
  color=0xff000000         # Black background
  height=35               # Bar height in pixels
  sticky=on               # Show on all spaces
  padding_left=7          # Left padding
  padding_right=7         # Right padding
)

# Default item styling
default=(
  icon.drawing=off         # Hide icons by default
  label.padding_left=4     # Label left padding
  label.padding_right=4    # Label right padding
  label.color=0xffcad3f5   # Catppuccin text color
)

# Apply configuration
sketchybar \
  --bar "${bar[@]}" \
  --default "${default[@]}"

# Update the bar
sketchybar --update

# Installation note:
# brew tap FelixKratz/formulae
# brew install sketchybar
